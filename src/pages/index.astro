---
// src/pages/index.astro
// Page principale refactoris√©e avec composants modulaires
import Layout from "../layouts/Layout.astro";
import LoadingSpinner from "../components/ui/LoadingSpinner.astro";
import LoginForm from "../components/auth/LoginForm.astro";
import UserBar from "../components/user/UserBar.astro";
import AdminPanel from "../components/admin/AdminPanel.astro";
import DiversityChecker from "../components/stats/DiversityChecker.astro";
import FiltersSection from "../components/news/FiltersSection.astro";
import NewsSection from "../components/news/NewsSection.astro";
import EditModal from "../components/modals/EditModal.astro";
---

<Layout title="INFODROP - Le Club priv√© de l'actu centralis√©e">
	<!-- Application Alpine.js avec logique modulaire -->
	<div
		x-data="infodropApp()"
		x-init="init(); $watch('activeFilter', (newFilter) => loadNews(newFilter, true))"
		class="w-full"
	>
		<!-- ================================================================== -->
		<!-- ‚è≥ √âCRAN DE CHARGEMENT INITIAL                                    -->
		<!-- ================================================================== -->
		<div x-show="!sessionLoaded">
			<LoadingSpinner
				size="lg"
				message="Initialisation d'INFODROP..."
				fullScreen={true}
			/>
		</div>

		<!-- ================================================================== -->
		<!-- üîë PAGE DE CONNEXION                                              -->
		<!-- ================================================================== -->
		<div x-show="sessionLoaded && !user" x-transition>
			<LoginForm />
		</div>

		<!-- ================================================================== -->
		<!-- üè† APPLICATION PRINCIPALE (UTILISATEUR CONNECT√â)                  -->
		<!-- ================================================================== -->
		<div
			x-show="sessionLoaded && user"
			x-transition.opacity
			class="min-h-screen flex flex-col"
		>
			<!-- ============================================================== -->
			<!-- üë§ BARRE UTILISATEUR                                          -->
			<!-- ============================================================== -->
			<UserBar />

			<!-- ============================================================== -->
			<!-- ‚öôÔ∏è PANNEAU ADMINISTRATION                                     -->
			<!-- ============================================================== -->
			<AdminPanel />

			<!-- ============================================================== -->
			<!-- üìä CONTENU PRINCIPAL                                          -->
			<!-- ============================================================== -->
			<main class="container-responsive py-6 flex-grow">
				<!-- ========================================================== -->
				<!-- üåà CHECKER DE DIVERSIT√â DES LECTURES                     -->
				<!-- ========================================================== -->
				<DiversityChecker />

				<!-- ========================================================== -->
				<!-- üîç SYST√àME DE FILTRES                                     -->
				<!-- ========================================================== -->
				<FiltersSection />

				<!-- ========================================================== -->
				<!-- üì∞ SECTION DES ACTUALIT√âS                                 -->
				<!-- ========================================================== -->
				<NewsSection />
			</main>

			<!-- ============================================================== -->
			<!-- ü¶∂ FOOTER                                                     -->
			<!-- ============================================================== -->
			<footer
				class="text-center py-8 text-xs text-gray-500 border-t border-gray-800 mt-auto"
			>
				<p class="mb-1">¬© 2025 INFODROP. Tous droits r√©serv√©s.</p>
				<p class="text-gray-600">Un projet 3C - EM&LPy</p>
				<div class="mt-2 flex items-center justify-center gap-4">
					<a href="/apropos" class="hover:text-gray-400 transition"
						>√Ä propos</a
					>
					<span class="text-gray-700">‚Ä¢</span>
					<a
						href="https://x.com/LOR4_14"
						target="_blank"
						class="hover:text-gray-400 transition">Support</a
					>
					<span class="text-gray-700">‚Ä¢</span>
					<span class="font-mono">v4.0.0-beta</span>
				</div>
			</footer>
		</div>

		<!-- ================================================================== -->
		<!-- üé≠ MODALS                                                         -->
		<!-- ================================================================== -->
		<EditModal />

		<!-- ================================================================== -->
		<!-- üîù BOUTON SCROLL TO TOP                                           -->
		<!-- ================================================================== -->
		<button
			x-data="{ show: false }"
			x-show="show"
			x-transition
			@click="window.scrollTo({ top: 0, behavior: 'smooth' })"
			x-init="window.addEventListener('scroll', () => { show = window.scrollY > 500 })"
			class="fixed bottom-6 right-6 z-40 bg-gray-800 hover:bg-gray-700 text-white p-3 rounded-full shadow-lg transition-all hover:scale-110 border border-gray-700 focus-ring"
			style="display: none;"
			title="Retour en haut"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-5 w-5"
				viewBox="0 0 20 20"
				fill="currentColor"
			>
				<path
					fill-rule="evenodd"
					d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z"
					clip-rule="evenodd"></path>
			</svg>
		</button>

		<!-- ================================================================== -->
		<!-- üîî ZONE DE NOTIFICATIONS (pour les c√©l√©brations futures)         -->
		<!-- ================================================================== -->
		<div id="notifications-zone" class="fixed top-4 right-4 z-50 space-y-2">
		</div>
	</div>

	<!-- ======================================================================== -->
	<!-- üìú SCRIPTS ET LOGIQUE                                                   -->
	<!-- ======================================================================== -->

	<!-- Charger la logique Alpine.js -->
	<script src="/scripts/appLogic.js" is:inline></script>

	<!-- Styles CSS pour les animations -->
	<style>
		/* Animation fade-in pour les √©l√©ments qui apparaissent */
		.fade-in {
			animation: fadeIn 0.5s ease-in;
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		/* Animation pour le scroll to top */
		.hover\:scale-110:hover {
			transform: scale(1.1);
		}

		/* Am√©lioration des transitions g√©n√©rales */
		* {
			transition-property: color, background-color, border-color,
				text-decoration-color, fill, stroke, opacity, box-shadow,
				transform, filter, backdrop-filter;
			transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			transition-duration: 200ms;
		}

		/* Animation de pulsation pour les √©l√©ments de chargement */
		.loading-pulse {
			animation: pulse 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
		}

		@keyframes pulse {
			0%,
			100% {
				opacity: 1;
			}
			50% {
				opacity: 0.5;
			}
		}

		/* Animation pour les confettis (utilis√©e par la logique de c√©l√©bration) */
		@keyframes confetti-fall {
			to {
				transform: translateY(100vh) rotate(360deg);
				opacity: 0;
			}
		}

		/* Am√©lioration de l'accessibilit√© - focus visible */
		.focus-ring:focus-visible {
			outline: 2px solid #3b82f6;
			outline-offset: 2px;
		}

		/* Masquer les √©l√©ments visuellement mais les garder pour les lecteurs d'√©cran */
		.sr-only {
			position: absolute;
			width: 1px;
			height: 1px;
			padding: 0;
			margin: -1px;
			overflow: hidden;
			clip: rect(0, 0, 0, 0);
			white-space: nowrap;
			border: 0;
		}

		/* Optimisation pour les performances sur mobile */
		@media (max-width: 768px) {
			.container-responsive {
				padding-left: 1rem;
				padding-right: 1rem;
			}
		}

		/* Animation de chargement skeleton pour les cartes d'actualit√©s */
		.skeleton {
			background: linear-gradient(
				90deg,
				#374151 25%,
				#4b5563 50%,
				#374151 75%
			);
			background-size: 200% 100%;
			animation: loading 1.5s infinite;
		}

		@keyframes loading {
			0% {
				background-position: 200% 0;
			}
			100% {
				background-position: -200% 0;
			}
		}
	</style>

	<!-- Script pour la gestion des performances et de l'accessibilit√© -->
	<script is:inline>
		// Am√©liorations des performances
		document.addEventListener("DOMContentLoaded", function () {
			// Pr√©chargement des images importantes
			const importantImages = [
				"/images/infodrop-favicon.png",
				"/images/apple-touch-icon-180x180.png",
			];

			importantImages.forEach((src) => {
				const link = document.createElement("link");
				link.rel = "preload";
				link.as = "image";
				link.href = src;
				document.head.appendChild(link);
			});

			// Gestion du mode hors ligne (optionnel)
			if ("serviceWorker" in navigator) {
				console.log(
					"üîß Service Worker disponible pour fonctionnalit√©s PWA futures",
				);
			}

			// Am√©lioration de l'accessibilit√©
			document.addEventListener("keydown", function (e) {
				// Navigation au clavier pour les √©l√©ments interactifs
				if (e.key === "Tab") {
					document.body.classList.add("keyboard-navigation");
				}
			});

			document.addEventListener("mousedown", function () {
				document.body.classList.remove("keyboard-navigation");
			});
		});

		// Gestion de la visibilit√© de la page pour optimiser les performances
		document.addEventListener("visibilitychange", function () {
			if (document.hidden) {
				console.log("üîÑ Page masqu√©e - optimisation des performances");
				// Ici on peut r√©duire la fr√©quence des mises √† jour
			} else {
				console.log("üëÅÔ∏è Page visible - reprise normale");
				// Ici on peut reprendre les mises √† jour normales
			}
		});

		// D√©tection de la connexion r√©seau
		window.addEventListener("online", function () {
			console.log("üåê Connexion internet r√©tablie");
		});

		window.addEventListener("offline", function () {
			console.log("üìµ Connexion internet perdue");
		});
	</script>
</Layout>
