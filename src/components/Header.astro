        </div>

        <!-- === MENU HAMBURGER (votre excellente impl√©mentation Alpine.js) === -->
        <div class="justify-self-end relative" x-data="{ showMenu: false }">
            <button
                @click="showMenu = !showMenu"
                @keydown.escape="showMenu = false"
                class="p-2 rounded-full hover:bg-gray-700 transition focus-ring"
                aria-label="Menu de navigation"
                :aria-expanded="showMenu"
                aria-haspopup="true"
            >
                <!-- Ic√¥ne hamburger anim√©e -->
                <div class="w-6 h-6 flex flex-col justify-center items-center">
                    <span
                        class="w-5 h-0.5 bg-current transition-all duration-300 ease-out"
                        :class="{ 'rotate-45 translate-y-1': showMenu, '-translate-y-1': !showMenu }"
                    ></span>
                    <span
                        class="w-5 h-0.5 bg-current transition-all duration-300 ease-out mt-1"
                        :class="{ 'opacity-0': showMenu }"></span>
                    <span
                        class="w-5 h-0.5 bg-current transition-all duration-300 ease-out mt-1"
                        :class="{ '-rotate-45 -translate-y-1': showMenu, 'translate-y-1': !showMenu }"
                    ></span>
                </div>
            </button>

            <!-- === OVERLAY (am√©lioration de votre version) === -->
            <div
                x-show="showMenu"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0"
                x-transition:leave="ease-in duration-200"
                x-transition:leave-end="opacity-0"
                class="fixed inset-0 bg-black/30 backdrop-blur-[2px] z-40"
                style="display: none;"
                @click="showMenu = false"
                aria-hidden="true"
            >
            </div>

            <!-- === DROPDOWN MENU (votre excellente structure) === -->
            <nav
                x-show="showMenu"
                @click.away="showMenu = false"
                x-transition:enter="ease-out duration-200"
                x-transition:enter-start="opacity-0 scale-95"
                x-transition:enter-end="opacity-100 scale-100"
                x-transition:leave="ease-in duration-150"
                x-transition:leave-start="opacity-100 scale-100"
                x-transition:leave-end="opacity-0 scale-95"
                class="absolute top-full right-0 mt-2 w-56 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50"
                style="display: none;"
                role="menu"
                aria-orientation="vertical"
            >
                <!-- === NAVIGATION PRINCIPALE === -->
                <div class="border-b border-gray-700">
                    <a
                        href="/"
                        class="flex items-center gap-3 px-4 py-3 text-base font-semibold text-white hover:text-blue-400 hover:bg-gray-700 transition focus-ring"
                        role="menuitem"
                        @click="showMenu = false"
                    >
                        <span aria-hidden="true">üì∞</span>
                        Flux 24H
                    </a>
                </div>

                <!-- === ANALYSES 360¬∞ (votre excellente id√©e) === -->
                <div class="border-b border-gray-700">
                    <a
                        href="/infodrop360"
                        class="flex items-center gap-3 px-4 py-3 text-base font-semibold text-blue-300 hover:text-white hover:bg-gray-700 transition focus-ring"
                        role="menuitem"
                        @click="showMenu = false"
                    >
                        <span aria-hidden="true">üåê</span>
                        Analyses 360¬∞
                    </a>
                </div>

                <!-- === LIENS SECONDAIRES === -->
                <a
                    href="/apropos"
                    class="flex items-center gap-3 px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition focus-ring"
                    role="menuitem"
                    @click="showMenu = false"
                >
                    <span aria-hidden="true">‚ÑπÔ∏è</span>
                    √Ä propos
                </a>

                <!-- === SUPPORT (avec lien externe s√©curis√©) === -->
                <a
                    href="https://buy.stripe.com/7sYcN6fh6ez47u5ejh28801"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition focus-ring"
                    role="menuitem"
                >
                    <span aria-hidden="true">‚ù§Ô∏è</span>
                    <span>Soutenir</span>
                    <svg
                        class="w-3 h-3 ml-auto opacity-60"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        ></path>
                    </svg>
                </a>

                <!-- === S√âPARATEUR === -->
                <div class="border-t border-gray-700 my-1" role="separator">
                </div>

                <!-- === D√âCONNEXION (uniquement si connect√©) === -->
                <button
                    x-show="$store.auth?.user"
                    @click="logout(); showMenu = false"
                    class="w-full flex items-center gap-3 px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition focus-ring text-left"
                    role="menuitem"
                >
                    <span aria-hidden="true">üö™</span>
                    D√©connexion
                </button>

                <!-- === INFOS DE VERSION ET STATUS === -->
                <div class="border-t border-gray-700 p-2">
                    <div
                        class="flex items-center justify-between text-xs text-gray-500"
                    >
                        <span>v4.0.0-beta</span>
                        <div class="flex items-center gap-1">
                            <div
                                class="w-2 h-2 bg-green-400 rounded-full animate-pulse"
                                aria-hidden="true"
                            >
                            </div>
                            <span>En ligne</span>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- === INDICATEUR DE SCROLL (bonus) === -->
    <div
        class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-blue-500 to-transparent opacity-0 transition-opacity"
        x-data="{ visible: false }"
        x-init="window.addEventListener('scroll', () => { visible = window.scrollY > 10 })"
        :class="{ 'opacity-100': visible }"
    >
    </div>
</header>

<style>
    /* Animation de l'ic√¥ne hamburger */
    .hamburger-line {
        transform-origin: center;
    }

    /* Am√©lioration du focus pour l'accessibilit√© */
    .focus-ring:focus-visible {
        outline: 2px solid #3b82f6;
        outline-offset: 2px;
    }

    /* Optimisation mobile */
    @media (max-width: 640px) {
        .max-w-4xl {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }

    /* Am√©lioration du contraste pour l'accessibilit√© */
    @media (prefers-contrast: high) {
        .bg-gray-900\/95 {
            background: rgb(17 24 39);
        }

        .border-gray-800 {
            border-color: rgb(31 41 55);
        }
    }

    /* R√©duction de mouvement pour les utilisateurs sensibles */
    @media (prefers-reduced-motion: reduce) {
        .transition {
            transition: none;
        }

        .animate-pulse {
            animation: none;
            opacity: 1;
        }
    }
</style>

<!-- Assurez-vous que Alpine.js est charg√© dans votre projet, par exemple dans votre layout ou index.html :
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
-->

<script>
    // Ajout de la d√©claration Alpine √† l'interface Window pour TypeScript
    declare global {
        interface Window {
            Alpine?: any;
        }
    }

    // Am√©lioration de l'accessibilit√© clavier
    document.addEventListener("keydown", function (e) {
        // Fermer le menu avec Escape
        if (e.key === "Escape") {
            const menuButton = document.querySelector('[aria-expanded="true"]');
            if (menuButton) {
                // V√©rifiez si Alpine est disponible avant d'appeler evaluate
                if (
                    window.Alpine &&
                    typeof window.Alpine.evaluate === "function"
                ) {
                    window.Alpine.evaluate(menuButton, "showMenu = false");
                }
                (menuButton as HTMLElement).focus();
            }
        }
    });
</script>
