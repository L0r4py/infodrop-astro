---
/* Header.astro - Version de secours avec emojis */
---

<header
    class="sticky top-0 z-50 bg-gray-900/95 backdrop-blur-sm border-b border-gray-800"
>
    <div class="max-w-4xl mx-auto px-4 py-3 grid grid-cols-3 items-center">
        <div class="justify-self-start">
            <a
                href="/"
                class="flex items-center gap-2 text-xl font-bold text-white hover:text-blue-400 transition whitespace-nowrap"
                style="line-height:1;"
            >
                <span
                    class="text-lg md:text-xl"
                    style="display:inline-block;vertical-align:middle;">📰</span
                >
                <span
                    class="tracking-tight"
                    style="display:inline-block;vertical-align:middle;"
                    >INFODROP</span
                >
                <span
                    class="ml-2 text-xs font-medium text-gray-400 bg-slate-700 px-2 py-0.5 rounded-full"
                    >4.0.0-beta</span
                >
            </a>
        </div>
        <div class="justify-self-center"></div>
        <div class="justify-self-end relative" x-data="{ showMenu: false }">
            <button
                @click="showMenu = !showMenu"
                class="p-2 rounded-full hover:bg-gray-700 transition cursor-pointer"
                aria-label="Ouvrir le menu"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
            <div
                x-show="showMenu"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0"
                x-transition:leave="ease-in duration-200"
                x-transition:leave-end="opacity-0"
                class="fixed inset-0 bg-black/30 backdrop-blur-[2px] z-40"
                style="display: none;"
                @click="showMenu = false"
            >
            </div>
            <div
                x-show="showMenu"
                @click.away="showMenu = false"
                x-transition
                class="absolute top-full right-0 mt-2 w-56 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50"
                style="display: none;"
            >
                <div class="border-b border-gray-700">
                    <a
                        href="/"
                        class="flex items-center gap-3 px-4 py-2 text-base font-semibold text-white hover:text-blue-400 hover:bg-gray-700 transition"
                        >📰 Flux 24H</a
                    >
                </div>
                <div class="border-b border-gray-700">
                    <a
                        href="/infodrop360"
                        class="flex items-center gap-3 px-4 py-2 text-base font-semibold text-white hover:text-blue-300 hover:bg-gray-700 transition"
                        >🌐 Analyses 360°</a
                    >
                </div>
                <a
                    href="/apropos"
                    class="flex items-center gap-3 px-4 py-2 text-sm text-gray-300 hover:bg-gray-700"
                    >ℹ️ À propos</a
                >
                <a
                    href="https://buy.stripe.com/7sYcN6fh6ez47u5ejh28801"
                    target="_blank"

                    class="flex items-center gap-3 px-4 py-2 text-sm text-gray-300 hover:bg-gray-700"
                    >❤️ Soutenir</a
                >
                <div class="border-t border-gray-700 my-1"></div>
                <a
                    href="#"
                    class="flex items-center gap-3 px-4 py-2 text-sm text-gray-300 hover:bg-gray-700"
                    >🚪 Déconnexion</a
                >
            </div>
        </div>
    </div>
</header>
